<!DOCTYPE html>
<html>
  <head>
    <title>ReBookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="top-wrapper container bg-danger" style="width:100%;padding:5px 0;">
      <div class="top" style="width:75%;">
        <div class="pull-left h2" style="padding-left:480px;">ReBookers</div>
        <div class="links pull-right" style="line-height:75px;">
          <% if user_signed_in? %>
            <div class="pull-left" style="margin:0 15px;"><%= fa_icon 'home' %><%= link_to "Home", user_path(id: current_user.id), class:"home" %></div>
            <div class="pull-left" style="margin:0 15px;"><%= fa_icon 'user' %><%= link_to "Users", users_path, class:"users" %></div>
            <div class="pull-left" style="margin:0 15px;"><%= fa_icon 'book' %><%= link_to "Books", books_path, class:"books" %></div>
            <div class="pull-left" style="margin:0 15px;"><%= fa_icon 'sign-out' %><%= link_to "Logout", destroy_user_session_path, method: :delete, class:"logout" %></div>
          <% else %>
            <div class="pull-left" style="margin:0 15px;"><%= fa_icon 'home' %><%= link_to "Home", "/", class:"home" %></div>
            <div class="pull-left" style="margin:0 15px;"><%= fa_icon 'info-circle' %><%= link_to "About", "/about", class:"about" %></div>
            <div class="pull-left" style="margin:0 15px;"><%= fa_icon 'user-plus' %><%= link_to "Sign_up", new_user_registration_path, class:"sign_up" %></div>
            <div class="pull-left" style="margin:0 15px;"><%= fa_icon 'sign-in' %><%= link_to "Login", new_user_session_path, class:"sign_in" %></div>
          <% end %>
          
        </div>
      </div>
    </div>
    <%= yield %>
  </body>
  <footer>
    <h4 style="text-align:center;clear:both;">CoppRight XXX.Inc</h4>
  </footer>
</html>
